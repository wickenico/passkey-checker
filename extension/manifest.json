{
  "manifest_version": 3,
  "name": "Passkey Checker",
  "version": "1.1",
  "description": "Erkenne automatisch, ob eine Seite Passkeys unterst√ºtzt",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_title": "Passkey Checker",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
